@model IEnumerable<CinemaApplication.Models.Genre>
@{
    ViewData["Title"] = "Index";
}
 <div class="container" p-3>
     <div class="row pt-4">
         <div class="col-6">
             <h2 class="text-primary"> Genre</h2>
         </div>
         <a asp-controller="Genre"  asp-action="Create" class="btn btn-primary ">
             <div  >
                 Create Genre
             </div>
         </a>
     </div>
     <br />
     @if (Model.Count() > 0) { 
 <table class="table table-bordered table-striped">
     <thead>
         <tr>
             <th scope="col">ID</th>
             <th scope="col">Name</th>
         </tr>
     </thead>
     <tbody>
         @foreach(var genre in Model ) {
            <tr>
                <td width="30%">
                    @genre.Id
                </td>
                <td width="30%">@genre.Name</td>
            </tr>
         }

     </tbody>
 </table>       }
            else
            {
                <p>No genre here</p>
            }
 </div>