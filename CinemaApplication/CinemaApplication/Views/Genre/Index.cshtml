@model IEnumerable<CinemaApplication.Models.Genre>
@{
    ViewData["Title"] = "Index";
}
 <div class="container" p-3>
     <div class="row pt-4">
         <div class="col-6">
             <h2 class="text-primary"> Genre</h2>
         </div>
         <a asp-controller="Genre"  asp-action="Create" class="btn btn-primary ">
             <div  >
                 Create Genre
             </div>
         </a>
     </div>
     <br />
     @if (Model.Count() > 0) { 
 <table class="table table-bordered table-striped">
     <thead>
         <tr>
             <th scope="col">ID</th>
             <th scope="col">Name</th>
         </tr>
     </thead>
     <tbody>
         @foreach(var genre in Model ) {
         <tr>
             <td width="30%">
                 @genre.Id
             </td>
             <td width="30%">@genre.Name</td>
             <td width="25%">
                 <div class="w-100 btn-group" role="group">
                     <a asp-controller="Genre" asp-action="Update" asp-route-Id="@genre.Id" class="btn btn-primary mx-1">Update</a>
                     <a asp-controller="Genre" asp-action="Delete" asp-route-Id="@genre.Id" class="btn btn-danger mx-1">Delete</a>
                 </div>
             </td>
         </tr>
         }

     </tbody>
 </table>       }
            else
            {
                <p>No genre here</p>
            }
 </div>