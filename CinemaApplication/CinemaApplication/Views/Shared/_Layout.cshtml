<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ELI-Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/e4ecf4b178.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.1.1/jq-3.3.1/dt-1.10.23/b-1.6.5/fc-3.3.2/sc-2.0.3/sb-1.0.1/sp-1.2.2/sl-1.3.1/datatables.min.css" />

    
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 background-color:#6f0000" >
            <div class="container">
                @if (User.IsInRole("Admin") || User.IsInRole("Super"))
                {
                    <a class="navbar-brand" asp-area="Admin" asp-controller="Account" asp-action="Users"><i style="color:darkred" class="fas fa-users-cog">Admin</i></a>

                }


                <a class="navbar-brand" asp-controller="Movies" asp-action="Index"><i style="color:darkred" class='fas fa-film '>ELI</i></a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>*@

                        @*<li class="nav-item">
                            <a class="nav-link "style="color:darkred" asp-area="" asp-controller="Movies" asp-action="Index">Movies</a>
                        </li>*@
                    </ul>


                </div>
                <form class="form-inline my-2 my-lg-0" asp-controller="Movies" asp-action="Filter" style="padding-right: 25px;">
                    <input name="searchString" type="text" style="color:darkred;" class="form-control" placeholder="Search for a movie..." aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-toolbar my-2 my-sm-0" type="submit"><i style="color:darkred;font:bolder" class="bi bi-search"></i></button>
                </form>

                <ul class="navbar-nav">
                    @await Component.InvokeAsync("ShoppingCartSummary")
                </ul>
                @*User profile section*@
                <div class="dropdown">


                    <ul class="dropdown-menu" aria-labelledby="profile-btn">
                        <li>
                            <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                <i style="color:darkred" class="bi bi-list"></i> Orders
                            </a>
                        </li>

                    </ul>

                </div>
                <partial name="_Identity.cshtml" />
            </div>
        </nav>
    </header>
    <div class="container" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#6f0000" >

        <div class="container">
            &copy; 2022 - ELICinemaApplication 
        </div>
    </footer>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
