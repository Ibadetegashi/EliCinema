<div style="margin:auto">
    @foreach (var item in Model)
    {
        <div class="card-group" style="float:left;margin-right:5px;margin-bottom:5px;margin:auto;">
            <div class="card" style="max-width: 17rem;">
                <img src="@item.ImageURL" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="card-body">
                        @*<p class="card-text">@item.Description</p>*@
                        <p class="card-text"><b>Cinema: </b>@item.Cinema.Name</p>
                        <p class="card-text"><b>Category: </b>@item.MovieCategory</p>

                        <p class="card-text ">
                            <b>Status: </b>
                            @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                            {
                                <span class="badge bg-success text-white">AVAILABLE</span> }
                            else if (DateTime.Now > item.EndDate)
                            {
                                <span class="badge bg-danger text-white">EXPIRED</span> }
                            else
                            {
                                <span class="badge bg-primary text-white">UPCOMING</span>}
                        </p>

                    </div>

                </div>
                <div class="card-footer">

                    <p class="card-text">
                        <a class="btn btn-outline-info float-right" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye" style="padding-bottom:120px"></i> Show Details
                        </a>


                        @*<a class="btn btn-success text-white @((DateTime.Now > item.EndDate) ? "disabled" : "")"
